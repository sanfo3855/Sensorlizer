<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none"
    android:layout_weight="1">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:isScrollContainer="true"
            android:padding="40px">

            <!--
            *****************
            * MOTION SENSOR *
            ***************** -->
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tvMotionSensor"
                    android:text="Motion Sensor"
                    android:textSize="90px"
                    android:textColor="@color/sensorName"
                    android:layout_margin="20px"
                    android:onClick=""/>
            </TableRow>

            <!-- 1 - ACCELLEROMETER -->
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tvAccellerometerText"
                    android:text="Accellerometer"
                    android:textSize="70px"
                    android:paddingLeft="30px"
                    android:textColor="@color/sensorName"
                    android:layout_margin="20px"/>
                <CheckBox
                    android:id="@+id/chkAccellerometer"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tvAccellerometerValueX"
                    android:textSize="40px"
                    android:paddingLeft="30px"
                    android:text=""
                    android:layout_margin="20px"/>
                </TableRow>
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tvAccellerometerValueY"
                    android:textSize="40px"
                    android:paddingLeft="30px"
                    android:text="Sensor not Found"
                    android:layout_margin="20px"/>
                </TableRow>
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tvAccellerometerValueZ"
                    android:textSize="40px"
                    android:paddingLeft="30px"
                    android:text=""
                    android:layout_margin="20px"/>
            </TableRow>
            <!-- 2 - GRAVITY -->
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tvGravityText"
                    android:text="Gravity"
                    android:textColor="@color/sensorName"
                    android:textSize="70px"
                    android:paddingLeft="30px"
                    android:layout_margin="20px"/>
                <CheckBox
                    android:id="@+id/chkGravity"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tvGravityValueX"
                    android:textSize="40px"
                    android:paddingLeft="30px"
                    android:text=""
                    android:layout_margin="20px"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tvGravityValueY"
                    android:textSize="40px"
                    android:paddingLeft="30px"
                    android:text="Sensor not Found"
                    android:layout_margin="20px"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tvGravityValueZ"
                    android:textSize="40px"
                    android:paddingLeft="30px"
                    android:text=""
                    android:layout_margin="20px"/>
            </TableRow>
            <!-- 3 - GYROSCOPE -->
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tvGyroscopeText"
                    android:text="Gyroscope"
                    android:textSize="70px"
                    android:paddingLeft="30px"
                    android:textColor="@color/sensorName"
                    android:layout_margin="20px"/>
                <CheckBox
                    android:id="@+id/chkGyroscope"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tvGyroscopeValueX"
                    android:textSize="40px"
                    android:paddingLeft="30px"
                    android:text=""
                    android:layout_margin="20px"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tvGyroscopeValueY"
                    android:textSize="40px"
                    android:paddingLeft="30px"
                    android:text="Sensor not Found"
                    android:layout_margin="20px"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tvGyroscopeValueZ"
                    android:textSize="40px"
                    android:paddingLeft="30px"
                    android:text=""
                    android:layout_margin="20px"/>
            </TableRow>

            <!-- 4 - LINEAR ACCELLERATION -->
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tvLinearAccellerationText"
                    android:text="Linear Accelleration"
                    android:paddingLeft="30px"
                    android:textSize="70px"
                    android:textColor="@color/sensorName"
                    android:layout_margin="20px"/>
                <CheckBox
                    android:id="@+id/chkLinearAccelleration"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tvLinearAccellerationValueX"
                    android:textSize="40px"
                    android:paddingLeft="30px"
                    android:text=""
                    android:layout_margin="20px"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tvLinearAccellerationValueY"
                    android:textSize="40px"
                    android:paddingLeft="30px"
                    android:text="Sensor not Found"
                    android:layout_margin="20px"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tvLinearAccellerationValueZ"
                    android:textSize="40px"
                    android:paddingLeft="30px"
                    android:text=""
                    android:layout_margin="20px"/>
            </TableRow>
            <TableRow></TableRow>
            <!-- 5 - ROTATION VECTOR -->


            <!--
            ***********************
            * ENVIROMENTAL SENSOR *
            ***********************-->
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tvEnviromentalSensor"
                    android:text="Enviromental Sensor"
                    android:textSize="90px"
                    android:textColor="@color/sensorName"
                    android:layout_margin="20px"
                    android:onClick=""/>
            </TableRow>

            <!-- 1 - AMBIENT TEMPERATURE -->
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tvAmbientTemperatureText"
                    android:text="Ambient Temperature"
                    android:textSize="70px"
                    android:paddingLeft="30px"
                    android:textColor="@color/sensorName"
                    android:layout_margin="20px"/>
                <CheckBox
                    android:id="@+id/chkAmbientTemperature"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tvAmbientTemperatureValue"
                    android:textSize="40px"
                    android:paddingLeft="30px"
                    android:text="Sensor not Found"
                    android:layout_margin="20px"/>
            </TableRow>

            <!-- 2 -LIGHT -->
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tvLigthText"
                    android:text="Ligth"
                    android:paddingLeft="30px"
                    android:textColor="@color/sensorName"
                    android:textSize="70px"
                    android:layout_margin="20px"/>
                <CheckBox
                    android:id="@+id/chkLigth"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tvLigthValue"
                    android:textSize="40px"
                    android:paddingLeft="30px"
                    android:text="Sensor not Found"
                    android:layout_margin="20px"/>
            </TableRow>

            <!--
            *******************
            * POSITION SENSOR *
            *******************-->
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tv"
                    android:text="Position Sensor"
                    android:textSize="90px"
                    android:textColor="@color/sensorName"
                    android:layout_margin="20px"
                    android:onClick=""/>
            </TableRow>

            <!-- 1 - MAGNETIC FIELD -->
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tvMagneticFieldText"
                    android:text="Magnetic Field"
                    android:textSize="70px"
                    android:paddingLeft="30px"
                    android:textColor="@color/sensorName"
                    android:layout_margin="20px"/>
                <CheckBox
                    android:id="@+id/chkMagneticField"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tvMagneticFieldValueX"
                    android:textSize="40px"
                    android:paddingLeft="30px"
                    android:text=""
                    android:layout_margin="20px"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tvMagneticFieldValueY"
                    android:textSize="40px"
                    android:paddingLeft="30px"
                    android:text="Sensor not Found"
                    android:layout_margin="20px"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tvMagneticFieldValueZ"
                    android:textSize="40px"
                    android:paddingLeft="30px"
                    android:text=""
                    android:layout_margin="20px"/>
            </TableRow>
        </TableLayout>





    </HorizontalScrollView>
</ScrollView>
